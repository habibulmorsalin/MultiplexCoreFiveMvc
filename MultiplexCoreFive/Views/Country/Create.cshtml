@model MultiplexCoreFive.Models.Country

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                   Create Country
                </div>
                <div class="card-body">
                    <form asp-controller="Country" asp-action="create">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label class="control-label">Name</label>
                            <div>
                                <input class="form-control" type="text" asp-for="Name" placeholder="Enter Name." required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Short Name</label>
                            <div>
                                <input class="form-control" type="text" asp-for="ShortName" placeholder="Enter Short Name." />
                                <span asp-validation-for="ShortName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                          <hr />
                            <input type="submit" class="btn btn-primary" name="save" value="Save" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
