@model IEnumerable<MultiplexCoreFive.Models.Country>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-9">
                            <h3>Country List</h3>
                        </div>
                        <div class="col-md-3 text-right">
                            <a asp-controller="Country" asp-action="Create" class="btn btn-primary btn-sm">Create Country</a>
                        </div>
                    </div>

                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        @{
                            ViewData["Title"] = "Country List";

                            if (Model != null && Model.Any())
                            {
                                <table class="table table-bordered " style="width:100%;">
                                    <thead>
                                        <tr>
                                            <th>Sl.</th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ShortName)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.CreateDate)
                                            </th>
                                            <th>
                                                Action
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int i = 1;
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@(i++)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.ShortName)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.CreateDate)</td>
                                                    <td>
                                                        <a class="btn btn-primary btn-sm" asp-controller="Country" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                                        <a class="btn btn-primary btn-sm" asp-controller="Country" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                                        <a class="btn btn-primary btn-sm" asp-controller="Country" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="alert alert-danger" role="alert">
                                    No Item Found!!!
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
